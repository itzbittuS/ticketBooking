<%- include('layout/header') %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="glass-card p-5 rounded-4 shadow-lg"
                    style="background: rgba(255, 255, 255, 0.05); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.1);">
                    <h2 class="fw-bold text-center mb-4"><span class="text-danger">User</span> Login</h2>

                    <form action="/login" method="POST">
                        <div class="mb-3">
                            <label class="form-label text-black">Username</label>
                            <input type="text" name="username" class="form-control bg-dark text-white border-secondary"
                                required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-black">Password</label>
                            <input type="password" name="password"
                                class="form-control bg-dark text-white border-secondary" placeholder="*******" required>
                        </div>
                        <a href="/registration" class="text-black text-decoration-none">If you don't have
                            an account? Register here</a>

                        <button type="submit" class="btn btn-danger w-100 fw-bold mt-2">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer') %>